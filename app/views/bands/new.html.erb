<h1> Register Band </h1>

<p> Register a band name, under your username! </p>

<%= form_for @band do |f| %>
  <%= render partial: 'common/show_object_errors', locals: {obj: @band } %>
  <%= f.label :name, 'Band Name' %> <br/>
  <%= f.text_field :name, class: 'form-control' %> <br/>
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %> <br/>
  <%= f.submit %>
<% end %>
