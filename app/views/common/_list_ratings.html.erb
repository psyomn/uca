<% if ratings && ratings.empty? %>
  <p> No ratings found. </p>
<% else %>
  <ul>
  <% ratings.each do |rating| %>
    <li>
      <span class="text-muted"><%= rating.song.full_name %></span> rated <code><%= rating.score %></code> by <%= link_to rating.user.best_name_possible, user_path(rating.user) %>
    </li>
  <% end %>
  </ul>
<% end %>
