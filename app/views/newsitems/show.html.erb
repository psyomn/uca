<h1> <%= @newsitem.title %> </h1>
<p class="text-muted"> Post date: <%= @newsitem.created_at %> </p>
<p class="text-muted"> Posted by: <%= user_link(@newsitem.user) %> </p>

<p> <%= @newsitem.body %> </h1>

<div>
<% if can? :update, @newsitem %>
  <%= link_to "edit", "#", class: 'btn btn-primary' %>
<% end %>

<% if can? :destroy, @newsitem %>
  <%= link_to "delete", "#", class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to news', newsitems_path, class: 'btn btn-primary' %>
</div>
