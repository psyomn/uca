<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
  <h1> Edit Info </h1>
  <%= form_for(@user, url: :update_user_info) do |f| %>
    <%= render partial: 'common/show_object_errors', locals: {obj: @user} %>
    <%= f.label :nickname %> <br/>
    <%= f.text_field :nickname, class: 'form-control', autocomplete: 'off' %>
    <%= f.label :real_name %> <br/>
    <%= f.text_field :real_name, class: 'form-control' %>
    <div id="hidden-taken-nickname" style="display:none;">
      <p class="text-danger"> That nickname has been taken. Please choose something else. </p>
    </div>
    <%= f.label :email %> <br/>
    <%= f.email_field :email, class: 'form-control' %>
    <%= f.label :bio %> <br/>
    <%= f.text_area :bio, class: 'form-control' %> <br/>
    <%= f.submit class: 'btn btn-primary'%>
  <% end %>
  </div>
</div>
